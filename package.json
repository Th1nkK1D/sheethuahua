{
	"name": "sheethuahua",
	"type": "module",
	"module": "src/index.ts",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"format": "prettier --write --ignore-unknown .",
		"prepare": "husky",
		"test": "bun test",
		"build": "rm -rf dist && bun build:js && bun build:types",
		"build:js": "bun build src/*.ts --outdir=dist --minify --splitting --external=*",
		"build:types": "tsc -d --declarationDir dist --emitDeclarationOnly"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown"
	},
	"dependencies": {
		"@sinclair/typebox": "^0.32.20",
		"d3-dsv": "^3.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@types/bun": "latest",
		"@types/d3-dsv": "^3.0.7",
		"bun-plugin-dts": "^0.2.3",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"prettier-plugin-organize-imports": "^3.2.4"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
